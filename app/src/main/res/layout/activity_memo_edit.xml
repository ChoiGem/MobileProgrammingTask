<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="3"
        android:padding="5dp">

        <Button android:text="저장" android:layout_margin="3dp"
            android:layout_columnWeight="1" android:id="@+id/save"/>
        <Button android:text="삭제" android:layout_margin="3dp"
            android:layout_columnWeight="1" android:id="@+id/delete"/>
        <Button android:text="뒤로가기" android:layout_margin="3dp"
            android:layout_columnWeight="1" android:id="@+id/back"/>
    </GridLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text=""
        android:hint="메모를 작성하세요."
        android:textSize="30dp"
        android:gravity="start"
        android:padding="5dp"/>
</LinearLayout>